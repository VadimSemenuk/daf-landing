---
import "../styles/global.css";

const {
	title = "Delayed Auditory Feedback (DAF) - Stuttering therapy",
	description = "Delayed Auditory Feedback (DAF) - a stuttering therapy technique. Android and web (online) applications that implement the DAF technique.",
	url = "https://daf.pragmatsoft.com",
	robots = "index, follow",
} = Astro.props;

const jsonldApp = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "MobileApplication",
			"@id": "https://daf.pragmatsoft.com/#mobileapp",
			"name": "DAF Speech Therapy",
			"description": "Speech fluency training using Delayed Auditory Feedback. Reduce Stuttering.",
			"applicationCategory": "HealthApplication",
			"operatingSystem": "Android 9+, Web",
			"isAccessibleForFree": true,
			"offers": {
				"@type": "Offer",
				"price": "0",
				"priceCurrency": "USD"
			},
			"publisher": {
				"@type": "Organization",
				"name": "mamindeveloper",
				"logo": {
					"@type": "ImageObject",
					"url": "https://daf.pragmatsoft.com/favicon.svg"
				},
				"contactPoint": {
					"@type": "ContactPoint",
					"email": "mamindeveloper@gmail.com",
					"contactType": "customer support"
				}
			},
			"downloadUrl": "https://play.google.com/store/apps/details?id=com.pragmatsoft.daf",
			"privacyPolicy": "https://vadimsemenuk.github.io/docs/daf_privacy_policy.html"
		},
		{
			"@type": "WebSite",
			"@id": "https://daf.pragmatsoft.com/#website",
			"url": "https://daf.pragmatsoft.com",
			"name": "DAF Speech Therapy",
			"publisher": {
				"@type": "Organization",
				"name": "mamindeveloper",
				"logo": {
					"@type": "ImageObject",
					"url": "https://daf.pragmatsoft.com/favicon.svg"
				},
				"contactPoint": {
					"@type": "ContactPoint",
					"email": "mamindeveloper@gmail.com",
					"contactType": "customer support"
				}
			}
		}
	]
}
const jsonldWeb = {
	"@context": "https://schema.org",
	"@type": "WebPage",
	"@id": "https://daf.pragmatsoft.com/#webpage",
	"url": "https://daf.pragmatsoft.com",
	"name": "DAF Speech Therapy â€“ Android App for Stuttering Reduction",
	"description": "DAF Speech Therapy is an Android app for speech fluency training using Delayed Auditory Feedback to reduce stuttering.",
	"isPartOf": {
		"@type": "WebSite",
		"@id": "https://daf.pragmatsoft.com/#website"
	},
	"primaryImageOfPage": {
		"@type": "ImageObject",
		"url": "https://daf.pragmatsoft.com/favicon.svg"
	},
	"about": {
		"@type": "MobileApplication",
		"@id": "https://daf.pragmatsoft.com/#mobileapp"
	},
	"publisher": {
		"@type": "Organization",
		"name": "mamindeveloper",
		"logo": {
			"@type": "ImageObject",
			"url": "https://daf.pragmatsoft.com/favicon.svg"
		}
	},
	"inLanguage": "en"
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="robots" content={robots} />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={url} />

		<link rel="canonical" href={url} />

		<script type="application/ld+json" set:html={JSON.stringify(jsonldApp)} />
		<script type="application/ld+json" set:html={JSON.stringify(jsonldWeb)} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
